# Environment Configuration for BhaMail

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=bhamail
DB_USER=bhamail
DB_PASSWORD=bhamail123

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# MinIO Configuration (S3-compatible storage)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=bhamail
MINIO_SECRET_KEY=bhamail123
MINIO_BUCKET=bhamail-attachments
MINIO_USE_SSL=false

# OpenSearch Configuration
OPENSEARCH_URL=http://localhost:9200
OPENSEARCH_USERNAME=admin
OPENSEARCH_PASSWORD=admin

# SMTP Configuration (MailHog for development)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_SECURE=false

# Application Configuration
NODE_ENV=development
PORT=8000
API_BASE_URL=http://localhost:8000
WEB_BASE_URL=http://localhost:3000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Encryption Keys
ENCRYPTION_KEY=your-32-character-encryption-key-here
PEPPER=your-random-pepper-for-passwords

# File Upload Configuration
MAX_FILE_SIZE=25MB
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx,ppt,pptx,txt,zip

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration
DEFAULT_FROM_EMAIL=noreply@bhamail.local
DEFAULT_FROM_NAME=BhaMail
SUPPORT_EMAIL=support@bhamail.local

# Admin Configuration
ADMIN_EMAIL=admin@bhamail.local
ADMIN_PASSWORD=password

# DKIM Configuration
DKIM_SELECTOR=default
DKIM_PRIVATE_KEY_PATH=./keys/dkim_private.pem

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# Development Configuration
LOG_LEVEL=debug
ENABLE_CORS=true
ENABLE_SWAGGER=true

# ClamAV Configuration
CLAMAV_HOST=localhost
CLAMAV_PORT=3310

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key

# Multi-tenant Configuration
ENABLE_MULTI_TENANT=false
DEFAULT_DOMAIN=bhamail.local

# PWA Configuration
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_EMAIL=support@bhamail.local